{{ form }}

<div class="comments">
  {% for comment in data %}
  <div class="comment-block">
    <div class="user">
      <span class="date">{{ comment['date'] }}</span>
    </div>
    <div class="comment">
      <div class="contacts">
        <div class="tel">
          <span class="title">Telephone:</span>
          <span class="phone">{{ comment['phone'] }}</span>
        </div>
        <div class="post">
          <span class="title">Telephone:</span>
          <span class="email">{{ comment['email'] }}</span>
        </div>
      </div>
      <div class="comment-text">{{ comment['comment'] }}</div>
    </div>
  </div>
  {% endfor %}
</div>
